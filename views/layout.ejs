    <link rel="stylesheet" href="/redactor/redactor.css" />
<script src="/redactor/redactor.js"></script>
<script type="text/javascript">
    $(document).ready(
      function()
      {
        $('#redactor_content').redactor({
            imageUpload: '/fileupload'
        });
      }
    );
    </script>
  </head>

  <body>
    <% if (!req.session.admin) { %>
          <a href="/login"><img src="/images/heart.png" class="pull-right" width="20" height="20"></a>
          
          
    <% } else { %>
           <a href="/blog/new"><img src="/images/pencil.png" class="pull-right" width="20" height="20"></a>
           <a href="/logout"><img src="/images/x.png" class="pull-right" width="20" height="20"></a>

    <% } %>
    
    

    <script type="text/javascript">
      $("#loginButton").click(function() {
        $("#loginForm").show("fade");
      });

      $("#logoutButton").click(function() {
        $.post(
          '/logout',
          function() { window.location = '/'; }
        ).fail(function(res) {
            alert("Error: " + res.getResponseHeader("error"));
        });
      });
    </script>
    <div class="container">
    <%- partial('sidebar') %>
    <%- body %>
</div>

